doctype html
html(lang='en', ng-app='remm')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, user-scalable=no')
    title 轻松投
    link(rel='stylesheet' href='../framework/bootstrap/css/bootstrap.css')
    link(rel='stylesheet' href='../public/stylesheets/main.css')
    script(src='../framework/angular-1.3.0.14/angular.min.js')
    script(src='../framework/angular-1.3.0.14/angular-route.min.js')
    script(src='../framework/angular-1.3.0.14/angular-resource.min.js')
    script(src='../framework/jquery-1.9.1.js')
    script(src='../framework/bootstrap/js/bootstrap.min.js')
    //- script(src='/socket.io/socket.io.js')
    script(src='../public/javascripts/app1.js')
    script(src='../public/javascripts/services1.js')
    script(src='../public/javascripts/controllers1.js')
  body(ng-controller="HomeCtrl")
    header 提示输入
    div.container
      input.remipt(ng-model="rem" ng-Change="change()")
      button(ng-click='iptwds()') 搜索
      .sel(ng-show = 'items.length>0')
        lable.remsel( ng-repeat = "item in items" value = "{{item.word}}") {{item.word}}
      button(ng-click='getredis()') redis
      label(ng-model="red") {{red}}
